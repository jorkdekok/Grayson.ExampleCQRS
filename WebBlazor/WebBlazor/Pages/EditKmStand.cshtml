@using WebBlazor.ViewModel
<div class="form-row">
    <div class="form-group">
        <label>Stand</label>
        <input class="form-control" type="number" placeholder="stand" bind="@newKmStand.stand" />
    </div>
    <div class="form-group">
        <label>Datum</label>
        <input class="form-control" type="date" placeholder="datum" bind="@newKmStand.datum" />
    </div>
</div>
<button class="btn btn-primary" onclick="@AddKmStand">Add</button>

<p>@status</p>

@functions {
KmStand newKmStand = new KmStand();
string status;

[Parameter]
private Action<KmStand> OnAdded { get; set; }

void AddKmStand()
{
    status = "added.";
    OnAdded?.Invoke(newKmStand);
}

}